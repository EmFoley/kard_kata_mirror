<div class="container">
  <form action='/users/decks' method="post">
    <select name ="decks">
      <% @decks.each do |deck| %>
        <option value='<%= deck.id %>'><%= deck.name %></option>
      <% end %>
    </select>
    <input type="submit" value="Start game">
  </form>
  <form action="/logout" method="post">
    <input type="submit" value="Logout">
  </form>
</div>