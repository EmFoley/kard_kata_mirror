<div class="container">
  <form action="/round" method="get">
    <select name ="deck_id">
      <% @decks.each do |deck| %>
        <option value='<%= deck.id %>'><%= deck.name %></option>
      <% end %>
    </select>
    <input type="submit" value="Start game">
  </form>
  <form action="/logout" method="post">
    <input type="submit" value="Logout">
  </form>
  <a href="/users/<%= @user_id %>/stats">See stats</a>
</div>